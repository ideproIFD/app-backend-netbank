<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.idepro.appbackendnetbank.repository.CdGarantiaAsignadoRepository">

    <resultMap type="CdGarantiaAsignado" id="result">
        <result property="idCredito" column="prgarnpre"/>
        <result property="idGarantia" column="prgartgar"/>
    </resultMap>

    <select id="listAll" resultType="CdGarantiaAsignado" resultMap="result">
       select prgarnpre, prgartgar from prgar where prgarnpre in (select prmprnpre from prmpr where prmprstat not in (0,1,7,9)
        and nvl((select gbpmtfdia from gbpmt)-prmprfinc,0)>0);
    </select>

</mapper>